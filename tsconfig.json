{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "noImplicitAny":false,

    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.spec.ts"
  ]
}
