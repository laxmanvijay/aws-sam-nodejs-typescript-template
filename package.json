{
  "name": "hello_world",
  "version": "1.0.0",
  "description": "AWS SAM NodeJS Typescript template",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.983.0",
    "axios": "^0.21.1",
    "tslib": "^2.3.1",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
    "compile": "tsc",
    "compileAndWatch": "tsc -w --preserveWatchOutput",
    "compileTestLint": "npm run compile && npm run test && npm run lint",
    "syncLayer": "cp ./package.json ./dependency-layer/nodejs && cd ./dependency-layer/nodejs && rm -rf node_modules && npm i --production",
    "prerunApiLocal": "npm run syncLayer",
    "runApiLocal": "npm run compileAndWatch & sam local start-api && fg",
    "predeploy": "npm run compileTestLint && npm run syncLayer",
    "deploy": "sam deploy"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "@babel/preset-typescript": "^7.15.0",
    "@types/aws-lambda": "^8.10.83",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "babel-jest": "^27.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.1.0",
    "precommit-hook": "^3.0.0",
    "typescript": "^4.4.2"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
